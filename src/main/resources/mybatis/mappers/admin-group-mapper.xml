<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.moim.moimapiserver.adminGroup.AdminGroupMapper">

    <select id="selectGroupCount">
        SELECT
            COUNT(*)
        FROM
            TBL_GROUP
    </select>

    <select id="selectAllGroup" parameterType="int" resultType="com.moim.moimapiserver.group.GroupDto">
        SELECT
            *
        FROM
            TBL_GROUP
                LIMIT #{size} OFFSET #{offset}
    </select>
</mapper>